<div class ="border-form-div">
<h2>Sign Up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div class ="form-group">
  		<%= f.email_field :email, :autofocus => true, :class => "form-control input-lg", :placeholder =>"Email" %>
	</div>

	<div class ="form-group">
  		<%= f.text_field :username, :autofocus => true, :class => "form-control input-lg", :placeholder =>"Username" %>
	</div>
	
	<div class ="form-group">
  		<%= f.password_field :password, :class => "form-control input-lg", :placeholder => "Password" %>
	</div>
	
	<div class ="form-group">
 		<%= f.password_field :password_confirmation, :class => "form-control input-lg", :placeholder => "Password Again" %>
	</div>
  	
  	<%= f.submit "Register", :class => "btn btn-success btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
