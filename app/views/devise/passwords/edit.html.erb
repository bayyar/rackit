<div class ="border-form-div">
<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class ="form-group"> <%= f.password_field :password, :autofocus => true, :placeholder => "Enter new password" %></div>

  <div class ="form-group">
  <%= f.password_field :password_confirmation, :placeholder => "Confirm new password" %></div>

  <%= f.submit "Change my password", :class => "btn btn-primary btn-block" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>