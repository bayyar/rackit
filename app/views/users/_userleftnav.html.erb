<div class="row">
	<div id="table">
		<div class="brow">
			<div class="tcell">
				<center><h3><%= link_to "@#{@user.username}", user_path(@user.username) %></h3></center>
				<hr />
				<ul class="nav nav-pills nav-justified">
					<li class="following"><%= link_to "Following: #{@following.count}", following_path(@user.username) %></li>
					<li class="followers"><%= link_to "Followers: #{@followers.count}", followers_path(@user.username) %></li>
				</ul>
			</div>
		</div>
		<div class="brow">
		<hr />
		</div>
		<div class="brow">
			<div class="tcell">
			<ul class="nav nav-pills nav-stacked">
	  		<li id="my_rack"><%= link_to user_path(@user.username) do %>Rack <span class="glyphicon glyphicon-heart"></span><% end %></li>
	  		<li id="my_feed"><%= link_to feed_path(@user.username) do %>Feed <span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-user"></span><% end %></li>
	  		<li id="global_feed"><%= link_to "#" do %>Global <span class="glyphicon glyphicon-globe"></span><% end %></li>
			</ul>
			</div>
		</div>
	</div>
</div>