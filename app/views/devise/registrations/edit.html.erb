<div class ="border-form-div">
<h2>Account Settings</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class ="form-group">
  <%= f.email_field :email, :autofocus => true, :class => "form-control input-lg"%></div>

  <div class ="form-group">
  <%= f.text_field :username, :autofocus => true, :class => "form-control input-lg"%></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class ="form-group"><%= f.label :new_password %>
  <%= f.password_field :password, :autocomplete => "off", :class => "form-control input-lg", :placeholder => "Enter new password" %></div>

  <div class ="form-group">
  <%= f.password_field :password_confirmation, :placeholder => "Confirm new password", :class => "form-control input-lg" %></div>

  <div class ="form-group"><%= f.label :enter_old_password_to_confirm %>
  <%= f.password_field :current_password, :class => "form-control input-lg", :placeholder => "Enter old password" %></div>

  <div><%= f.submit "Update", :class => "btn btn-primary btn-block" %></div>
<% end %>

<br /><h4><center>Delete my account</center></h4>

<%= button_to "Thanks for the memories", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-default btn-block" %></p>

<center><%= link_to "Back", :back %></center>
</div>
